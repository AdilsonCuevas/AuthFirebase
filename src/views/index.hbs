<div class="container">
    <nav class="navbar navbar-dark bg-dark">
    <a class="h2">Medical Solutions</a>
    <div class="form-inline">
        <form action="/contacs_EX" method="POST"> 
            <h5 class="modal-title">Ingresar usuario</h5>
            <input class="ccc form-control-sm mr-sm-1" type="email" name="email1" placeholder="Ingresar correo electronico" autofocus>
            <input class="form-control form-control-sm mr-sm-1" type="password" name="password1" placeholder="Ingresar contraseña">
            <button class="btn btn-dark my-1 my-sm-0 btn-sm">iniciar sesión</button>
        {{#if errorRegistro1}}
                <small id="passwordHelpBlock" class="form-text text-muted"> usuario incorrecto</small>
        {{/if}}
        </form>
        <button class="btn btn-danger my-1 my-sm-0 btn-sm" data-toggle="modal" data-target="#exampleModal">Registrarse</button>
    </div>
    </nav>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Registro de usuarios</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/new_contacs" method="POST">
            <input class="form-control" type="email" name="email" placeholder="Ingresar correo electronico">
            <div class="mt-2"></div>
            <input class="form-control" type="password" name="password" placeholder="Ingresar contraseña">
            {{#if errorRegistro}}
                    <small id="passwordHelpBlock1" class="form-text text-muted">maximo 6 caracteres</small>
            {{/if}}
            <div class="mt-2"></div>
            <button class="btn btn-primary btn-block my-1 my-sm-0 btn-sm">Guardar</button>
        </form>
      </div>
    </div>
  </div>
</div>


